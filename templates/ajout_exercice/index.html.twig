{% extends 'base.html.twig' %}

{% block title %}Hello AjoutExerciceController!{% endblock %}

{% block body %}

<div>
    <form method="post">
        <div class="form-group">
            <label>Titre de l'exercice</label>
            <input required type="text" class="form-control" id="title" name="title">
        </div>
        <div class="form-group">
            <label for="enonce">Enoncé</label>
            <textarea class="form-control" id="enonce"  rows="3" name="enonce"></textarea>
        </div>
        <div class="form-group">
            <label >Résultat de l'exercice</label>
            <input required type="text" class="form-control" id="resultat" name="resultat">
        </div>
        <label for="start">Date de création</label>
        <input class="form-control" type="datetime-local" id="date_de_creation" name="date_de_creation"
               value="2018-07-22"
               min="2022-01-01" max="2050-12-31">
        <input class="btn btn-outline-primary btn-lg btn-block" type="submit">
    </form>
</div>
{% endblock %}
